{
  "manifest_version": 3,
  "name": "TubeSummarizer AI",
  "version": "1.0.0",
  "description": "Automatically summarizes YouTube videos and reads the summary aloud with word highlighting.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tts"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content.js"],
      "css": ["sidebar.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "sidebar.css", "sidebar.js", "tts.js", "icons/*.png"],
      "matches": ["https://www.youtube.com/*"]
    }
  ],
  "action": {
    "default_title": "TubeSummarizer AI Options (Not Implemented Yet)"
  }
}